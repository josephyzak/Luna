
    <main class="login-design">
        <div class="Izquierdo">
        </div>
        <div class="Derecho">
            <div class="login-data">
                <img src="img/collab.png">
                <h1>Inicio de Sesión</h1>
                <form action="/auth" class="login-form" method="Post">
                    <div class="input-group">
                        <label class="input-fill">
                            <input type="email" name="email" id="email" required>
                            <span class="input-label">Correo Electrónico</span>
                            <i class="fas fa-envelope"></i>
                        </label>
                    </div>
                    <div class="input-group">
                        <label class="input-fill">
                            <input type="password" name="password" id="password" required>
                            <span class="input-label">Contraceña</span>
                            <i class="fas fa-lock"></i>
                        </label>
                    </div>
                    <a href="/registro">¿Necesitas una Cuenta?</a>
                    <input type="submit" value="Iniciar Sesión" class="btn-login">
                </form>
            </div>
        </div>
    </main>